{
  "target": "es5",
  "compilerOptions": {
    "outDir": "dist"
  },
  "lib": [
    "dom",
    "dom.iterable",
    "esnext"
  ],
  "allowJs": true,
  "skipLibCheck": true,
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "strict": true,
  "forceConsistentCasingInFileNames": true,
  "noFallthroughCasesInSwitch": true,
  "module": "commonjs",
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "include": [
    "src"
  ],
  "typeRoots": [
    "node_modules/@types",
    "./types"
  ]
}
